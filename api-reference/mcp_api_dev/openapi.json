{
    "openapi": "3.0.3",
    "info": {
        "title": "RESTful API",
        "description": "A free RESTful API service for developers to store and retrieve objects with flexible schemas.\nPerfect for demo projects, testing, learning, or educational purposes.\n",
        "version": "1.0.0",
        "contact": {
            "url": "https://restful-api.dev/"
        }
    },
    "servers": [
        {
            "url": "https://api.restful-api.dev",
            "description": "Production server"
        }
    ],
    "paths": {
        "/objects": {
            "get": {
                "summary": "List all objects",
                "description": "Retrieves a list of all objects stored in the database",
                "operationId": "listObjects",
                "tags": [
                    "Objects"
                ],
                "parameters": [
                    {
                        "name": "ids",
                        "in": "query",
                        "description": "Comma-separated list of object IDs to retrieve specific objects",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "1,2,3"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Object"
                                    }
                                },
                                "examples": {
                                    "allObjects": {
                                        "summary": "List of all objects",
                                        "value": [
                                            {
                                                "id": "1",
                                                "name": "Google Pixel 6 Pro",
                                                "data": {
                                                    "color": "Cloudy White",
                                                    "capacity": "128 GB"
                                                },
                                                "createdAt": "2023-01-01T12:00:00.000Z",
                                                "updatedAt": "2023-01-01T12:00:00.000Z"
                                            },
                                            {
                                                "id": "2",
                                                "name": "Apple iPhone 13",
                                                "data": {
                                                    "color": "Midnight",
                                                    "capacity": "256 GB"
                                                },
                                                "createdAt": "2023-01-02T12:00:00.000Z",
                                                "updatedAt": "2023-01-02T12:00:00.000Z"
                                            }
                                        ]
                                    },
                                    "specificObjects": {
                                        "summary": "Specific objects by IDs",
                                        "value": [
                                            {
                                                "id": "3",
                                                "name": "Samsung Galaxy S21",
                                                "data": {
                                                    "color": "Phantom Gray",
                                                    "capacity": "128 GB"
                                                },
                                                "createdAt": "2023-01-03T12:00:00.000Z",
                                                "updatedAt": "2023-01-03T12:00:00.000Z"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new object",
                "description": "Creates a new object with the provided data",
                "operationId": "createObject",
                "tags": [
                    "Objects"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ObjectInput"
                            },
                            "examples": {
                                "phoneExample": {
                                    "summary": "Create a phone object",
                                    "value": {
                                        "name": "Apple MacBook Pro 16",
                                        "data": {
                                            "year": 2021,
                                            "price": 1849.99,
                                            "CPU model": "Intel Core i9",
                                            "Hard disk size": "1 TB"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Object created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Object"
                                },
                                "example": {
                                    "id": "123",
                                    "name": "Apple MacBook Pro 16",
                                    "data": {
                                        "year": 2021,
                                        "price": 1849.99,
                                        "CPU model": "Intel Core i9",
                                        "Hard disk size": "1 TB"
                                    },
                                    "createdAt": "2023-01-04T12:00:00.000Z",
                                    "updatedAt": "2023-01-04T12:00:00.000Z"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/objects/{id}": {
            "get": {
                "summary": "Get a single object",
                "description": "Retrieves a specific object by its ID",
                "operationId": "getObject",
                "tags": [
                    "Objects"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Object ID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "7"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Object"
                                },
                                "example": {
                                    "id": "7",
                                    "name": "Apple iPad Air",
                                    "data": {
                                        "generation": "4th",
                                        "price": 599.99,
                                        "capacity": "64 GB"
                                    },
                                    "createdAt": "2023-01-05T12:00:00.000Z",
                                    "updatedAt": "2023-01-05T12:00:00.000Z"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Object not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                },
                                "example": {
                                    "error": "Object with id=999 was not found."
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Replace an object",
                "description": "Completely replaces an existing object with new data",
                "operationId": "replaceObject",
                "tags": [
                    "Objects"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Object ID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "7"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ObjectInput"
                            },
                            "example": {
                                "name": "Apple iPad Air (Updated)",
                                "data": {
                                    "generation": "5th",
                                    "price": 649.99,
                                    "capacity": "128 GB"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Object replaced successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Object"
                                },
                                "example": {
                                    "id": "7",
                                    "name": "Apple iPad Air (Updated)",
                                    "data": {
                                        "generation": "5th",
                                        "price": 649.99,
                                        "capacity": "128 GB"
                                    },
                                    "createdAt": "2023-01-05T12:00:00.000Z",
                                    "updatedAt": "2023-01-06T12:00:00.000Z"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Object not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "summary": "Partially update an object",
                "description": "Updates specific fields of an existing object",
                "operationId": "updateObject",
                "tags": [
                    "Objects"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Object ID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "7"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ObjectPatch"
                            },
                            "example": {
                                "name": "Apple iPad Air - Special Edition",
                                "data": {
                                    "price": 699.99
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Object updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Object"
                                },
                                "example": {
                                    "id": "7",
                                    "name": "Apple iPad Air - Special Edition",
                                    "data": {
                                        "generation": "5th",
                                        "price": 699.99,
                                        "capacity": "128 GB"
                                    },
                                    "createdAt": "2023-01-05T12:00:00.000Z",
                                    "updatedAt": "2023-01-07T12:00:00.000Z"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Object not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete an object",
                "description": "Deletes an object by its ID",
                "operationId": "deleteObject",
                "tags": [
                    "Objects"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Object ID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "7"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Object deleted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Object with id=7 has been deleted."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Object not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Object": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the object",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the object",
                        "example": "Google Pixel 6 Pro"
                    },
                    "data": {
                        "type": "object",
                        "description": "Flexible object containing custom attributes",
                        "additionalProperties": true,
                        "example": {
                            "color": "Cloudy White",
                            "capacity": "128 GB",
                            "price": 899.99
                        }
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the object was created",
                        "example": "2023-01-01T12:00:00.000Z"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the object was last updated",
                        "example": "2023-01-01T12:00:00.000Z"
                    }
                }
            },
            "ObjectInput": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the object",
                        "example": "Google Pixel 6 Pro"
                    },
                    "data": {
                        "type": "object",
                        "description": "Flexible object containing custom attributes",
                        "additionalProperties": true,
                        "example": {
                            "color": "Cloudy White",
                            "capacity": "128 GB"
                        }
                    }
                }
            },
            "ObjectPatch": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the object",
                        "example": "Google Pixel 6 Pro"
                    },
                    "data": {
                        "type": "object",
                        "description": "Flexible object containing custom attributes (partial update)",
                        "additionalProperties": true,
                        "example": {
                            "price": 799.99
                        }
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string",
                        "description": "Error message",
                        "example": "Object with id=999 was not found."
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Objects",
            "description": "Operations for managing objects"
        }
    ]
}